<h1>Create Shipment</h1>
<br>
<br>

<form method="post" id="new-shipment-form">
    <label for="_id">ID: </label>
    <input type="text" id="_id" name="_id" minlength="24" maxlength="24" required>
    <label for="quantity">Price: </label>
    <input type="number" id="price" name="price" step=".01" min="1" required>
    <label for="quanity">Shipment Quantity: </label>
    <input type="number" id="quantity" name="quantity" min="1" required>
    <button id="addItemBt" type="submit">Add Item to Cart</button>
</form>
<br>


<h2>Cart</h2>
<table id="cart">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Quantity</th>
            <th>Price Per</th>
        </tr>
    </thead>
    <tbody id="tbody">

    </tbody>
</table>
<button id="submitCartBt" type="submit">Submit cart</button>
<div id="error"></div>

<h2>Current Inventory List:</h2>
{{#if inventoryData}}
    <p>Click to add an item to the order shipment cart.</p>
    <table>
        <tr>
            <th>Item #</th>
            <th>Item ID</th>
            <th>Name</th>
            <th>Available Quantity</th>
            <th>Current Price</th>
        </tr>
        {{#each inventoryData}}
        <tr id="row{{@index}}">
            <td>{{@index}}</td>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.quantity}}</td>
            <td>$ {{this.price}}</td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <p class="inventory-not-found">We're sorry, but the inventory is empty.</p>
    <a href="/">Please add to the inventory here.</a>
{{/if}}
